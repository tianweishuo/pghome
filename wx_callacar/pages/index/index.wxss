@import "../../tamplates/login-model.wxss";

.main {
  width: 100%;
  background-color: antiquewhite;
  display: flex;
  flex-direction: row;
}

.item {
  height: 147rpx;
  width: 100rpx;
}

.item1 {
  background-color: red;
  width: 20%;
}

.item2 {
  background-color: dodgerblue;
  width: 80%;
}

.messageend {
  margin-top: 20px;
  margin-left: 5%;
  width: 90%;
  background-color: white;
  border-radius: 6px 6px 6px 6px;
}

.start {
  margin-top: 10px;
  margin-left: 4%;
  height: 25px;
  display: flex;
  font-size: 15px;
  line-height: -10px;
}

.endplace {
  margin-top: 10px;
  margin-left: 4%;
  height: 25px;
  display: flex;
  color: grey;
  font-size: 15px;
}

/* 切换轿车 */

.specialmessage {
  z-index: 100;
  border-radius: 10px 10px 10px 10px;
  margin-left: 5%;
  width: 90%;
  height: 15%;
  margin-top: 20px;
  background-color: white;
}

.selection {
  position: relative;
  display: flex;
  width: 100%;
  height: 60%;
}

.carimgs {
  width: 20%;
  height: 100%;
  background-color: white;
}

.carmoney {
  width: 80%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}

.nexto {
  position: relative;
  display: flex;
  width: 100%;
  height: 40%;
}

.jiaoche {
  width: 50%;
  text-align: center;
  color: white;
  background-color: #9ac81f;
}

.quxiao {
  width: 50%;
  text-align: center;
  color: white;
  background-color: red;
}

/* 标点 */

.return {
  width: 50px;
  height: 50px;
  border-radius: 50px 50px 50px 50px;
  background-color: white;
  margin-left: 80%;
}